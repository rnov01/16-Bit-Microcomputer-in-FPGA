/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    And(a=a, b=b, out=ab);
    And(a=b, b=sel, out=bsel);
    And(a=a, b=notsel, out=anotsel);
    Or(a=ab, b=bsel, out=or1);
    Or(a=anotsel, b=or1, out=out);
}